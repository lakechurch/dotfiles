##!/bin/sh

# --- History Settings ---
HISTSIZE=1000000
SAVEHIST=1000000

# --- Default Editors & Pagers ---
export EDITOR="nvim"
export VISUAL="nvim"
export TERMINAL="kitty"
export BROWSER="firefox"
export MANPAGER='nvim +Man!'
export MANWIDTH=999
export NVIM_APPNAME=lazyvim

# --- Tool Configuration ---
# Limit Cargo to use fewer cores (saves RAM for your browser/LSP)
export CARGO_BUILD_JOBS=4
# FZF: Use fd (faster) instead of find, respect .gitignore
export FZF_DEFAULT_COMMAND='fd --type f --strip-cwd-prefix --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# --- PATH Configuration (Order Matters: Prepend to $PATH) ---
# 1. Local bins (highest priority)
export PATH="$HOME/.local/bin:$HOME/bin:$PATH"

# 2. Languages & Package Managers
export PATH="$HOME/.cargo/bin:$PATH"
export PATH="$HOME/.fnm:$PATH"
export PATH="$HOME/.rbenv/bin:$PATH"
export PATH="$HOME/.local/share/go/bin:$PATH"
export GOPATH="$HOME/.local/share/go"
export PATH="$HOME/.atuin/bin:$PATH"

# 3. Embedded Toolchains (STM32, ARM GCC)
export PATH="$HOME/STMicroelectronics/STM32Cube/STM32CubeProgrammer/bin:$PATH"
# Consider aliasing this huge path or adding it only when needed to keep PATH clean, 
# but for now, we keep it here.
export PATH="/home/curtis/workspace/coursera/linux-system-programming-introduction-to-buildroot/gcc-arm-10.3-2021.07-x86_64-aarch64-none-linux-gnu/bin/:$PATH"

# 4. Pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

# 5. Cross system filepaths
export TODO_LOG="$HOME/log/TODO.md"

# Note: We do NOT 'eval' things here. We only export variables.
