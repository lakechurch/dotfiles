#!/bin/bash

# --- Modern Replacements ---

# ls -> eza (Modern fork of exa)
if command -v eza >/dev/null; then
  alias ls="eza --icons --git"
  alias ll="eza --icons --git -l --group"
  alias la="eza --icons --git -la"
  alias lt="eza --icons --tree --level=2" # Tree view
else
  alias ls="ls --color=always"
  alias ll="ls -l"
  alias la="ls -lA"
fi

# cat -> bat (Syntax highlighting for cat)
if command -v bat >/dev/null; then
  alias cat="bat"
fi

# grep -> ripgrep (rg) if available, else colorized grep
if command -v rg >/dev/null; then
  alias grep="rg"
else
  alias grep="grep --color=always"
fi

# --- Editors ---
alias vim="nvim"
alias vi="nvim"
alias v="nvim"
alias vimdiff='nvim -d'

# --- Workflow Shortcuts ---
alias python=python3

# Quick Edit Configs (Optional handy aliases)
alias zshconfig="nvim $ZDOTDIR/.zshrc"
alias aliasconfig="nvim $ZDOTDIR/zsh-aliases"

# Use 'fdfind' as 'fd' if on Ubuntu/Debian
command -v fdfind >/dev/null && alias fd='fdfind'

# Chat with Copilot in place
alias gc='gh copilot chat'
# Ask a quick question (1-liner)
#alias ga='gh copilot ask'
# Generate commit message
alias gcm='gh copilot generate commit-message'
alias ghelp='gh copilot --help'
alias '??'='gh copilot suggest -t shell'
alias gem="xdg-open https://gemini.google.com/app"  # 'xdg-open' on Linux if 'open' doesn't work

# 'wtf' to explain a command (Explain)
alias 'wtf'='gh copilot explain'

# Git specific suggestion
alias 'git?'='gh copilot suggest -t git'
